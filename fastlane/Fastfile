default_platform(:ios)

BUNDLE_ID = ENV["BUNDLE_ID"]
DEVELOPER_APP_ID = ENV["DEVELOPER_APP_ID"]
DEVELOPER_APP_IDENTIFIER = ENV["DEVELOPER_APP_IDENTIFIER"]
PROVISIONING_PROFILE_SPECIFIER = ENV["PROVISIONING_PROFILE_SPECIFIER"]
TEMP_KEYCHAIN_USER = ENV["TEMP_KEYCHAIN_USER"]
TEMP_KEYCHAIN_PASSWORD = ENV["TEMP_KEYCHAIN_PASSWORD"]
APPLE_ISSUER_ID = ENV["APPLE_ISSUER_ID"]
APPLE_KEY_ID = ENV["APPLE_KEY_ID"]
APPLE_KEY_CONTENT = ENV["APPLE_KEY_CONTENT"]
GIT_AUTHORIZATION = ENV["GIT_AUTHORIZATION"]
GIT_USERNAME = ENV["GIT_USERNAME"]
GIT_EMAIL = ENV["GIT_EMAIL"]
PR_BODY = ENV["PR_BODY"]

def delete_temp_keychain()
  delete_keychain(
    name: TEMP_KEYCHAIN_USER
  ) if File.exist? File.expand_path("~/Library/Keychains/#{TEMP_KEYCHAIN_USER}-db")
end

def create_temp_keychain()
  create_keychain(
      name: TEMP_KEYCHAIN_USER,
      password: TEMP_KEYCHAIN_PASSWORD,
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false
  )
end

def ensure_temp_keychain()
  delete_temp_keychain()
  create_temp_keychain()
end

def build_app_locally()
  ensure_temp_keychain()

  api_key = app_store_connect_api_key(
    key_id: APPLE_KEY_ID,
    issuer_id: APPLE_ISSUER_ID,
    key_content: APPLE_KEY_CONTENT,            
    duration: 1200,            
    in_house: false
  )

  match(
    type: "appstore",
    app_identifier: "#{DEVELOPER_APP_IDENTIFIER}",
    git_basic_authorization: Base64.strict_encode64(GIT_AUTHORIZATION),
    readonly: true,
    keychain_name: TEMP_KEYCHAIN_USER,
    keychain_password: TEMP_KEYCHAIN_PASSWORD,
    api_key: api_key
  )

  gym(
    configuration: "Release",
    project: "NBackGame.xcodeproj",
    scheme: "NBackGame",
    export_method: "app-store",
    export_options: {
      compileBitcode: true,
      provisioningProfiles: { 
          BUNDLE_ID => PROVISIONING_PROFILE_SPECIFIER
      }
    }
  )
end

def clear_data() 
  clean_build_artifacts
  delete_temp_keychain()
end

def setup_git_config()
    sh("git config --global user.name " + GIT_USERNAME)
    sh("git config --global user.email " + GIT_EMAIL)
    sh("git config pull.rebase true")
end

platform :ios do

  lane :deploy_to_appstore do
    ensure_temp_keychain()

    increment_build_number(xcodeproj: "NBackGame.xcodeproj")


    build_app_locally()

   # capture_ios_screenshots

    deliver(
      submit_for_review: true,
      automatic_release: true,
      overwrite_screenshots: false,
      force: true,
      release_notes: {
        'default' => PR_BODY,
      },
      submission_information: {
        export_compliance_uses_encryption: false,
        add_id_info_uses_idfa: false
      },
      precheck_include_in_app_purchases: false
    )

    increment_version_number(bump_type: "major")
    increment_build_number(build_number: 1)

    clear_data()
  end

  lane :update_bump_main_version do
    setup_git_config()

    sh("git fetch --all")

    sh("git checkout main")

    version = get_version_number()

    sh("git commit -am \"Bump version to: " + version + "\"")

    sh("git push")

  end

  lane :bump_verion do
    sh "git fetch --all --unshallow"
    git_pull

    v = (get_version_number.to_i + 1).to_s + ".0"
    increment_version_number(version_number: v)
    increment_build_number(build_number: 1)

    commit_version_bump(
      message: "Version Bump to: " + v
    )

    push_to_git_remote

  end

  
  lane :update_bump_stable_version do
    setup_git_config()

    sh("git fetch --all")

    sh("git checkout stable")
      
    build_number = get_build_number(xcodeproj: "NBackGame.xcodeproj")

    sh("git commit -am \"Bump build version to: " + build_number + "\"")

    sh("git push")
  end

  lane :push_new_stable_to_dev do
    # setup_git_config()

    # sh("git push --force origin stable:dev")
    # sh "git fetch --all --unshallow"

    sh "git checkout dev"
    sh "git pull --no-rebase origin stable"
    sh "git push"
  end

  lane :push_new_main_to_stable do
    setup_git_config()

    sh("git push --force origin main:stable")
  end

  lane :push_new_main_to_dev do
    setup_git_config()

    sh("git push --force origin main:dev")
  end

  lane :deploy_to_testflight do
    build_app_locally()

    pilot(
      apple_id: "#{DEVELOPER_APP_ID}",
      app_identifier: "#{DEVELOPER_APP_IDENTIFIER}",
      skip_waiting_for_build_processing: false,
      skip_submission: false,
      distribute_external: true,
      groups: "Testers",
      changelog: PR_BODY,
      notify_external_testers: true,
      ipa: "./NBackGame.ipa"
    )

    increment_build_number(xcodeproj: "NBackGame.xcodeproj")

    clear_data()
  end

  lane :create_pr_to_stable do 

    create_pull_request(
      api_token: Base64.strict_encode64(GIT_AUTHORIZATION),
      repo: "seeyIT/NBackGame",
      title: "Test PR from fastlane",
      base: "stable"
      )

  end
end
