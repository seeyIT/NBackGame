default_platform(:ios)

BUNDLE_ID = ENV["BUNDLE_ID"]
DEVELOPER_APP_ID = ENV["DEVELOPER_APP_ID"]
DEVELOPER_APP_IDENTIFIER = ENV["DEVELOPER_APP_IDENTIFIER"]
PROVISIONING_PROFILE_SPECIFIER = ENV["PROVISIONING_PROFILE_SPECIFIER"]
TEMP_KEYCHAIN_USER = "keychain"#ENV["TEMP_KEYCHAIN_USER"]
TEMP_KEYCHAIN_PASSWORD = "123456"#ENV["TEMP_KEYCHAIN_PASSWORD"]
APPLE_ISSUER_ID = ENV["APPLE_ISSUER_ID"]
APPLE_KEY_ID = ENV["APPLE_KEY_ID"]
APPLE_KEY_CONTENT = ENV["APPLE_KEY_CONTENT"]
GIT_AUTHORIZATION = ENV["GIT_AUTHORIZATION"]

def delete_temp_keychain()
  delete_keychain(
    name: TEMP_KEYCHAIN_USER
  ) if File.exist? File.expand_path("~/Library/Keychains/#{TEMP_KEYCHAIN_USER}-db")
end

def create_temp_keychain()
  puts "before creating keychain"
  create_keychain(
      name: TEMP_KEYCHAIN_USER,
      password: TEMP_KEYCHAIN_PASSWORD,
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false
  )
  puts "after creating keychain"
end

def ensure_temp_keychain()
  delete_temp_keychain()
  create_temp_keychain()
end

platform :ios do
  lane :closed_beta do
    puts "Close beta started"
    puts "Creds taken"
    ensure_temp_keychain()

    puts "Keychain ensured"
    api_key = app_store_connect_api_key(
      key_id: APPLE_KEY_ID,
      issuer_id: APPLE_ISSUER_ID,
      key_content: APPLE_KEY_CONTENT,            
      duration: 1200,            
      in_house: false
    )
    
    increment_build_number(xcodeproj: "NBackGame.xcodeproj")


    match(
      type: 'appstore',
      app_identifier: "#{DEVELOPER_APP_IDENTIFIER}",
      git_basic_authorization: Base64.strict_encode64(GIT_AUTHORIZATION),
      readonly: true,
      keychain_name: TEMP_KEYCHAIN_USER,
      keychain_password: TEMP_KEYCHAIN_PASSWORD,
      api_key: api_key
    )
    puts "-----MATCH FiNISHED"

  #   version = get_version_number()
  # increment_version_number(version_number: version)
  # increment_version_number(bump_type: "major")
  #   build_app(workspace: "NBackGame.xcworkspace", scheme: "NBackGame")
  #   deliver(
  #     submit_for_review: true,
  #     automatic_release: false, # change it after tests
  #     overwrite_screenshots: false, # change it after tests
  #     force: true,
  #     submission_information: {
  #       export_compliance_uses_encryption: false,
  #       add_id_info_uses_idfa: false
  #     }
  #  )


    gym(
      configuration: "Release",
      project: "NBackGame.xcodeproj",
      scheme: "NBackGame",
      export_method: "app-store",
      export_options: {
        compileBitcode: true,
        provisioningProfiles: { 
            BUNDLE_ID => PROVISIONING_PROFILE_SPECIFIER
        }
      }
    )

    pilot(
      apple_id: "#{DEVELOPER_APP_ID}",
      app_identifier: "#{DEVELOPER_APP_IDENTIFIER}",
      skip_waiting_for_build_processing: false,
      skip_submission: false,
      distribute_external: true,
      groups: "Testers",
      changelog: "Test changelong",
      notify_external_testers: true,
      ipa: "./NBackGame.ipa"
    )
    clean_build_artifacts


    delete_temp_keychain()
  end
end